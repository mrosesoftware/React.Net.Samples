@model React.Sample.Models.CommentListViewModel
@using System.Web.Optimization
@using React.Web.Mvc

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title></title>
        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" type="text/css" rel="stylesheet"/>
    </head>
    <body>
        <div id="content">
            @Html.React("CommentBox", new
            {
                initialData = Model.Comments,
                url = Url.Action("GetComments", "Comments"),
                submitUrl = Url.Action("AddComment", "Comments"),
                pollInterval = 5000
            })
        </div>
        @Scripts.Render("~/js/react")
        @Scripts.Render("~/js/jsx")
        @Html.ReactInitJavaScript()

    </body>
</html>
